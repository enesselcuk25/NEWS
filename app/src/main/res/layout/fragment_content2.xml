<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Images"
            type="com.example.news.userDataModel.contentModel.DataContentImageTwo" />

        <variable
            name="readerNews"
            type="com.example.news.userDataModel.contentModel.ContentDataTwoNewsTwo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="vertical"
        tools:context=".views.content2Fragment">


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#212121"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/newsone"
                app:imageResource="@{Images.imageTwo}" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="155dp"
                android:text="@{readerNews.news2}"
                android:textAlignment="center"
                android:textColor="@color/white" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>